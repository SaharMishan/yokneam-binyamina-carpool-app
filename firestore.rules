
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // בדיקה אם המשתמש הוא אדמין (לפי המסמך שלו בדאטה בייס)
    // הוספת בדיקת קיום המסמך למניעת שגיאות הרשאה בזמן יצירת משתמש חדש
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // *** חוק הברזל של המנהל הראשי ***
    function isMasterAdmin() {
       return isSignedIn() && request.auth.token.email == 'saharmish93@gmail.com';
    }

    match /trips/{tripId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isMasterAdmin() || isAdmin() || (isSignedIn() && (
        resource.data.driverId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['passengers', 'availableSeats'])
      ));
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isMasterAdmin() || (isSignedIn() && request.auth.uid == userId);
    }

    match /notifications/{notifId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isMasterAdmin() || isAdmin());
    }
    
    match /system_announcements/{msgId} {
      allow read: if isSignedIn(); 
      allow write: if isAdmin() || isMasterAdmin();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || isMasterAdmin();
    }
    
    match /typing_status/{tripId} {
      allow read, write: if isSignedIn();
    }
    
    match /messages/{msgId} {
      allow read, create: if isSignedIn();
    }
  }
}